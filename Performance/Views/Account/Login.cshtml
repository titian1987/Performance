@model Performance.Models.LoginModel

<div class="container col-lg-2 col-lg-offset-5 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2 margin50">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl, @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @*<p><img src="~/Images/logo.jpg" alt="Logo" height="60"></p>*@
        <p><label for="inputUsername" class="margin10">Username</label></p>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" , @id = "username"})
        <label for="inputPassword" class="margin10">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password" })
        <input type="submit" value="Log in" class="btn btn-primary btn-block margin20" />
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
